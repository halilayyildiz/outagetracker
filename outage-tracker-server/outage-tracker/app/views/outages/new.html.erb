<h1>New Outage</h1>

<%= form_for @outages, url: outages_path do |f| %>
    <p>
      <%= f.label 'Outages Id' %><br>
      <%= f.text_field :outage_id %>
    </p>

    <p>
      <%= f.label 'Description' %><br>
      <%= f.text_field :description %>
    </p>

    <p>
      <%= f.label 'Location' %><br>
      <%= f.text_field :location %>
    </p>

    <p>
      <%= f.label :'Start Date' %><br>
      <%= f.datetime_select :start_date %>
    </p>

    <p>
      <%= f.label :'End Date' %><br>
      <%= f.datetime_select :end_date %>
    </p>

    <p>
      <%= f.label 'Address' %><br>
      <%= f.text_area :address %>
    </p>

    <p>
      <%= f.label 'Affected Customers' %><br>
      <%= f.text_field :affected_customers %>
    </p>

    <p>
      <%= f.submit %>
    </p>
<% end %>
